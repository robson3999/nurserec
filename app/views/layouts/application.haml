!!!
%html
  %head
    %title Nurserec
    = csrf_meta_tags
    = csp_meta_tag

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    = render 'shared/nav'
    .container
      - if notice.present?
        .alert.alert-success= notice
      - if alert.present?
        .alert.danger= alert
      = yield
