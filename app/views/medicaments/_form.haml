= simple_form_for medicament do |f|
  = f.input :name, label: 'Nazwa'
  = f.association :substances, input_html: { class: 'select2' }, label: 'Substancje aktywne'
  = f.input :status, as: :select, collection: medicaments_statuses
  = f.association :medicament_groups, input_html: { class: 'select2' }, label: 'Grupy lek√≥w'
  = f.button :submit, class: 'btn btn-primary'
  = link_to 'Wstecz', :back, class: 'btn btn-dark'
:javascript
  $(".select2").select2({
    theme: "bootstrap"
  })